<div class='sticky dark:bg-gray-900/75 block top-0 p-1'>
    <h2
        class='font-bold text-2xl bg-gradient-to-r from-emerald-500 to-emerald-700 bg-clip-text text-transparent block top-0 my-4 text-center'
    >
        MY CART
    </h2>
</div>
<div id='cartID' style='display: none;'>{{cid}}</div>

<div class='grid justify-items-center mt-5'>

    <div class='relative overflow-x-auto max-w-2xl'>
        <table
            class='w-full text-sm text-left text-gray-600 dark:text-gray-300 mb-4'
        >
            <thead
                class='text-xs text-gray-700 uppercase bg-gray-100 dark:bg-gray-700 dark:text-gray-300'
            >
                <tr>
                    <th scope='col' class='px-4 py-2 rounded-l-lg'>
                        Product name
                    </th>
                    <th scope='col' class='px-4 py-2'>
                        Qty
                    </th>
                    <th scope='col' class='px-4 py-2'>
                        Price
                    </th>
                    <th scope='col' class='px-4 py-2'>
                        Subtotal
                    </th>
                    <th scope='col' class='px-4 py-2 rounded-r-lg'>
                        Remove
                    </th>
                </tr>
            </thead>
            <tbody id='tbody-products'>
            </tbody>
            <tfoot class='bg-gray-100 dark:bg-gray-700'>
                <tr class='font-semibold text-gray-900 dark:text-white'>
                    <th
                        scope='row'
                        class='px-4 py-1 text-base rounded-l-lg'
                    >Total</th>
                    <td class='px-4 py-1' id='totalQ'></td>
                    <td class='px-4 py-1' id=''></td>
                    <td class='px-4 py-1' id='totalP'></td>
                    <td class='px-4 py-1 rounded-r-lg'></td>
                </tr>
            </tfoot>
        </table>
    </div>

    <div
        class='flex flex-row items-center justify-center w-full h-full p-4 text-center text-gray-400 dark:text-gray-600'
    >

        <button
            id='clearCart'
            type='button'
            class='relative inline-flex items-center px-2 py-2 text-sm font-medium text-center text-white bg-red-700 rounded-lg hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800 ml-3'
        >
            <svg
                xmlns='http://www.w3.org/2000/svg'
                width='16'
                height='16'
                fill='currentColor'
                class='h-5 w-5'
                viewBox='0 0 16 16'
            >
                <path
                    fill='white'
                    d='M15.898,4.045c-0.271-0.272-0.713-0.272-0.986,0l-4.71,4.711L5.493,4.045c-0.272-0.272-0.714-0.272-0.986,0s-0.272,0.714,0,0.986l4.709,4.711l-4.71,4.711c-0.272,0.271-0.272,0.713,0,0.986c0.136,0.136,0.314,0.203,0.492,0.203c0.179,0,0.357-0.067,0.493-0.203l4.711-4.711l4.71,4.711c0.137,0.136,0.314,0.203,0.494,0.203c0.178,0,0.355-0.067,0.492-0.203c0.273-0.273,0.273-0.715,0-0.986l-4.711-4.711l4.711-4.711C16.172,4.759,16.172,4.317,15.898,4.045z'
                ></path>
            </svg>
            <span class='ml-2'>
                Clear
            </span>
        </button>

        <button
            id='purchaseCart'
            type='button'
            class='relative inline-flex items-center px-2 py-2 text-sm font-medium text-center text-white bg-green-700 rounded-lg hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-green-300 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800 ml-3'
        >
            <svg
                xmlns='http://www.w3.org/2000/svg'
                width='128'
                height='128'
                class='h-5 w-5'
                viewBox='0 0 14 14'
            ><g
                    fill='none'
                    stroke='currentColor'
                    stroke-linecap='round'
                    stroke-linejoin='round'
                ><path
                        d='M7 10.02v1.01m0-6.02v.94m0 7.54c3.5 0 6-1.24 6-4c0-3-1.5-5-4.5-6.5l1.18-1.52a.66.66 0 0 0-.56-1H4.88a.66.66 0 0 0-.56 1L5.5 3C2.5 4.51 1 6.51 1 9.51c0 2.74 2.5 3.98 6 3.98Z'
                    /><path
                        d='M6 9.56A1.24 1.24 0 0 0 7 10a1.12 1.12 0 0 0 1.19-1A1.12 1.12 0 0 0 7 8a1.12 1.12 0 0 1-1.19-1A1.11 1.11 0 0 1 7 6a1.26 1.26 0 0 1 1 .4'
                    /></g></svg>

            <span class='ml-2'>
                Purchase
            </span>
        </button>
    </div>
</div>
{{! --------------------------------------------------- }}

<button
    data-modal-target='large-modal'
    data-modal-toggle='large-modal'
    class='hidden block w-full md:w-auto text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800'
    type='button'
    id='modalBtn'
>
    Modal
</button>

<!-- Large Modal -->
<div
    id='large-modal'
    tabindex='-1'
    class='fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full'
>
    <div class='relative w-full max-w-4xl max-h-full'>
        <!-- Modal content -->
        <div class='relative bg-white rounded-lg shadow dark:bg-gray-700'>
            <!-- Modal header -->
            <div
                class='flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600'
            >
                <h3
                    class='text-xl font-medium text-gray-900 dark:text-white'
                    id='ticketHeader'
                >
                    Header
                </h3>
                <button
                    type='button'
                    class='text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white'
                    data-modal-hide='large-modal'
                >
                    <svg
                        class='w-3 h-3'
                        aria-hidden='true'
                        xmlns='http://www.w3.org/2000/svg'
                        fill='none'
                        viewBox='0 0 14 14'
                    >
                        <path
                            stroke='currentColor'
                            stroke-linecap='round'
                            stroke-linejoin='round'
                            stroke-width='2'
                            d='m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6'
                        />
                    </svg>
                    <span class='sr-only'>Close modal</span>
                </button>
            </div>
            <!-- Modal body -->
            <div class='p-4 md:p-5 space-y-4'>
                <p
                    class='text-base leading-relaxed text-gray-500 dark:text-gray-400'
                >
                    You have purchased the following products:
                </p>
                <div id='modalProducts'>
                    TABLA
                </div>
                <p
                    class='text-base leading-relaxed text-gray-500 dark:text-gray-400'
                >
                    TOTAL: $<span id='modalTotal'>xxx</span>
                </p>
                <div id='noProducts'>
                    <p
                        class='text-base leading-relaxed text-gray-500 dark:text-gray-400'
                    >
                        Sadly, the following products were not available:
                    </p>
                    <div id='modalNoProducts'>
                        TABLA NOO
                    </div>
                    <p
                        class='text-base leading-relaxed text-gray-500 dark:text-gray-400'
                    >
                        Go to the store to check if they are available now.
                    </p>
                </div>
                <p
                    class='text-base leading-relaxed text-gray-500 dark:text-gray-400'
                >
                    Thanks for your purchase! ðŸ˜Š
                </p>
            </div>
            <!-- Modal footer -->
            <div
                class='flex items-center p-4 md:p-5 space-x-3 rtl:space-x-reverse border-t border-gray-200 rounded-b dark:border-gray-600'
            >
                <button
                    id='modalBtnOk'
                    data-modal-hide='large-modal'
                    type='button'
                    class='text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800'
                >
                    Ok
                </button>

            </div>
        </div>
    </div>
</div>

<script src='/static/js/cart.js'></script>
