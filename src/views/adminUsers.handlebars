<div class='sticky dark:bg-gray-900/75 block top-0 p-1'>
    <h2
        class='font-bold text-2xl bg-gradient-to-r from-emerald-500 to-emerald-700 bg-clip-text text-transparent block top-0 my-4 text-center'>
        USERS ADMINISTRATION
    </h2>
    <div class='w-full flex justify-end items-center'>
        {{#if user}}
        <div class='mr-4'>
            Hello
            <span class="italic">
                {{user.name}} ðŸ‘‹
                {{user.role}}
            </span>
        </div>
        <div class='mr-4'>
            <a href='/logout' class="text-red-500">Logout</a>
        </div>
        {{else}}
        <div class='mr-4'>
            <a href='/signup'>Signup</a>
        </div>
        <div class='mr-4'>
            <a href='/login'>Login</a>
        </div>
        {{/if}}

    </div>
</div>

<div id='container'>
    <div class='flex justify-end flex-wrap mt-4 mr-4'>
        <button type='submit' title="Delete users without activity in 2 days" onclick="deleteInactiveUsers()"
            class='text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800'>Delete
            inactive users</button>
    </div>

    <div class='flex justify-center flex-wrap py-7'>
        <div class='max-w-5xl px-5 grid grid-cols-3 gap-3 flex items-center' id='card-container'>

            {{#each users}}

            <div data-search-text='{{this.name}}{{this.email}}'
                class='user-card block max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700'>
                <div class='flex justify-start gap-2'>
                    <div class='h-10 w-10'>
                        {{#if this.isPremium }}
                        <span
                            class="bg-green-100 text-green-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">{{this.role}}</span>
                        {{ else }}
                        <span
                            class="bg-gray-100 text-gray-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-gray-300">{{this.role}}</span>
                        {{/if}}
                    </div>
                </div>
                <h5 class='mb-1 text-2xl font-bold tracking-tight text-gray-900 dark:text-white' title="{{this._id}}">
                    {{this.name}}
                </h5>
                <p class='font-normal text-gray-700 dark:text-gray-400'>
                    {{this.email}}
                </p>
                <div class='flex justify-end gap-2 font-medium text-xl mt-5'>
                    {{#if this.isPremium }}
                    <button type='submit' title="Downgrade to regular user" onclick="switchRole('{{this._id}}')"
                        class='text-white bg-yellow-700 hover:bg-yellow-800 focus:ring-4 focus:outline-none focus:ring-yellow-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-yellow-600 dark:hover:bg-yellow-700 dark:focus:ring-yellow-800'>Downgrade</button>
                    {{ else }}
                    <button type='submit' title="Upgrade to premium user" onclick="switchRole('{{this._id}}')"
                        class='text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800'>Upgrade</button>
                    {{/if}}

                    <button type='submit' title="Delete user" onclick="deleteUser('{{this._id}}')"
                        class='text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800'>Delete</button>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src='/static/js/adminUsers.js'></script>
